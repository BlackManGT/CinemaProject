<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.cinema.activity.FeedBackSuccessActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/yijian"
            android:text="意见反馈"
            android:layout_marginTop="24dp"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:textSize="16sp"
            android:textColor="#333333"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


        <ImageView
            android:id="@+id/imageViewa"
            android:layout_below="@+id/yijian"
            android:layout_marginTop="120dp"
            android:layout_centerInParent="true"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="@drawable/feedbacksuccess"/>

        <TextView
            android:id="@+id/chenggong"
            android:text="反馈成功"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/imageViewa"
            android:layout_marginTop="24dp"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:textSize="18sp"
            android:textColor="#333333"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:text="感谢您对唯独影院的关注与支持，我们会认真处理您的反馈，尽快修复和完善相关功能"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/chenggong"
            android:layout_marginTop="24dp"
            android:layout_marginLeft="34dp"
            android:layout_marginRight="34dp"
            android:textSize="14sp"
            android:textColor="#999999"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginBottom="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/finishihhhh"
            android:layout_alignParentBottom="true"
            android:background="@drawable/com_icon_my_default"
            android:layout_width="58dp"
            android:layout_height="58dp" />
    </RelativeLayout>
</RelativeLayout>
