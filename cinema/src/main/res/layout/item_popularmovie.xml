<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingRight="10dp"
    android:orientation="vertical">

    <com.facebook.drawee.view.SimpleDraweeView
        app:roundedCornerRadius="5dp"
        android:id="@+id/popularsdv"
        android:layout_width="126dp"
        android:layout_height="164dp" />
    <RelativeLayout
        android:background="@drawable/back_round"
        android:layout_below="@+id/popularsdv"
        android:layout_marginTop="-40dp"
        android:layout_width="126dp"
        android:layout_height="40dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <View
                android:id="@+id/popu_vertical"
                android:layout_margin="10dp"
                android:layout_width="3dp"
                android:layout_height="20dp"
                android:background="@drawable/vertical_gradient"/>
            <TextView
                android:layout_alignRight="@+id/popu_vertical"
                android:id="@+id/populartextview"
                android:gravity="center"
                android:text="找到你"
                android:textSize="14sp"
                android:maxEms="6"
                android:textColor="#ffffff"
                android:layout_width="wrap_content"
                android:layout_height="40dp" />
        </LinearLayout>

    </RelativeLayout>


</RelativeLayout>