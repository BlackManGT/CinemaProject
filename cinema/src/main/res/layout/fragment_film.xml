<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/kuang"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.facebook.drawee.view.SimpleDraweeView
                    android:background="@drawable/moviebackground"
                    android:layout_width="match_parent"
                    android:layout_height="186dp" />
                <RelativeLayout
                    android:id="@+id/one"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <com.facebook.drawee.view.SimpleDraweeView
                        android:id="@+id/moivesdv"
                        android:layout_marginTop="30dp"
                        android:layout_marginLeft="24dp"
                        android:background="@drawable/com_icon_loc_white_default"
                        android:layout_width="16dp"
                        android:layout_height="21dp" />
                    <TextView
                        android:id="@+id/film_text"
                        android:layout_marginLeft="6dp"
                        android:text="北京"
                        android:textColor="#ffffff"
                        android:layout_marginTop="30dp"
                        android:layout_toRightOf="@+id/moivesdv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </RelativeLayout>



                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_alignParentRight="true"
                        android:id="@+id/seacrch_linear2"
                        android:layout_width="220dp"
                        android:layout_height="30dp"
                        android:layout_marginTop="22dp"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:background="@drawable/shape_search"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:id="@+id/imageView"
                            android:layout_marginLeft="10dp"
                            android:src="@drawable/com_icon_search_default" />

                        <EditText
                            android:focusable="false"
                            android:id="@+id/seacrch_editext"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_weight="1"
                            android:background="@null"
                            android:hint="CCTV影城"
                            android:textColor="#ffffff"
                            android:textColorHint="#ffffff"
                            android:textSize="14sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="20dp"
                            android:id="@+id/seacrch_text"
                            android:text="搜索"
                            android:textColor="#ffffff" />

                    </LinearLayout>

                </RelativeLayout>

                <recycler.coverflow.RecyclerCoverFlow
                    android:id="@+id/movieflow"
                    android:layout_marginTop="85dp"
                    android:layout_width="match_parent"
                    android:layout_height="223dp"></recycler.coverflow.RecyclerCoverFlow>
            </RelativeLayout>

            <RelativeLayout
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <View
                    android:background="@drawable/lineone"
                    android:layout_width="match_parent"
                    android:layout_height="3dp"/>

                <RadioGroup
                    android:id="@+id/home_radio_group"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:background="@drawable/lineone"
                    android:layout_height="2dp">
                    <RadioButton
                        android:id="@+id/home_radio_1"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:button="@null"
                        android:checked="true"
                        android:background="@drawable/radio_selector"
                        android:layout_height="match_parent"/>
                    <RadioButton
                        android:id="@+id/home_radio_2"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:button="@null"
                        android:background="@drawable/radio_selector"
                        android:layout_height="match_parent"/>
                    <RadioButton
                        android:id="@+id/home_radio_3"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:button="@null"
                        android:background="@drawable/radio_selector"
                        android:layout_height="match_parent"/>
                    <RadioButton
                        android:id="@+id/home_radio_4"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:button="@null"
                        android:background="@drawable/radio_selector"
                        android:layout_height="match_parent"/>
                    <RadioButton
                        android:id="@+id/home_radio_5"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:button="@null"
                        android:background="@drawable/radio_selector"
                        android:layout_height="match_parent"/>
                    <RadioButton
                        android:id="@+id/home_radio_6"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:button="@null"
                        android:background="@drawable/radio_selector"
                        android:layout_height="match_parent"/>
                </RadioGroup>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/populars"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/filmone"
                    android:text="热门电影"
                    android:textSize="14sp"
                    android:textColor="#333333"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <View
                    android:layout_marginTop="4dp"
                    android:layout_below="@+id/filmone"
                    android:background="@drawable/linetwo"
                    android:layout_width="30dp"
                    android:layout_height="3dp"/>

                <com.facebook.drawee.view.SimpleDraweeView
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/com_icon_next"
                    android:layout_width="8dp"
                    android:layout_height="12dp" />
            </RelativeLayout>
            <android.support.v7.widget.RecyclerView
                android:layout_marginTop="20dp"
                android:layout_marginLeft="24dp"
                android:id="@+id/popular"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></android.support.v7.widget.RecyclerView>

            <RelativeLayout
                android:id="@+id/Beings"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/filmtwo"
                    android:text="正在上映"
                    android:textSize="14sp"
                    android:textColor="#333333"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <View
                    android:layout_marginTop="4dp"
                    android:layout_below="@+id/filmtwo"
                    android:background="@drawable/linetwo"
                    android:layout_width="30dp"
                    android:layout_height="3dp"/>

                <com.facebook.drawee.view.SimpleDraweeView
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/com_icon_next"
                    android:layout_width="8dp"
                    android:layout_height="12dp" />
            </RelativeLayout>
            <android.support.v7.widget.RecyclerView
                android:layout_marginTop="20dp"
                android:layout_marginLeft="24dp"
                android:id="@+id/being"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></android.support.v7.widget.RecyclerView>

            <RelativeLayout
                android:id="@+id/Soons"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/filmthree"
                    android:text="即将上映"
                    android:textSize="14sp"
                    android:textColor="#333333"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <View
                    android:layout_marginTop="4dp"
                    android:layout_below="@+id/filmthree"
                    android:background="@drawable/linetwo"
                    android:layout_width="30dp"
                    android:layout_height="3dp"/>

                <com.facebook.drawee.view.SimpleDraweeView
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/com_icon_next"
                    android:layout_width="8dp"
                    android:layout_height="12dp" />
            </RelativeLayout>
            <android.support.v7.widget.RecyclerView
                android:layout_marginTop="20dp"
                android:layout_marginLeft="24dp"
                android:id="@+id/soon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></android.support.v7.widget.RecyclerView>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
