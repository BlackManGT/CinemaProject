<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:layout_marginLeft="24dp"
    android:layout_marginRight="24dp"
    android:orientation="vertical">


    <RelativeLayout
        android:id="@+id/re1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <ImageView
            android:id="@+id/image_loca"
            android:layout_width="16dp"
            android:layout_height="21dp"
            android:layout_centerVertical="true"
            android:background="@drawable/cinema_detail_icon_location_default" />

        <TextView
            android:id="@+id/detalistextone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/image_loca"
            android:text="海淀区悦秀路99号二层"
            android:textColor="#333333"
            android:textSize="12sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/re2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/re1"
        android:layout_marginTop="20dp">

        <ImageView
            android:id="@+id/phone"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_centerVertical="true"
            android:background="@drawable/cinema_detail_icon_phone_default" />

        <TextView
            android:id="@+id/detalistexttwo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/phone"
            android:text="0412-8999123"
            android:textColor="#333333"
            android:textSize="12sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/re3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/re2"
        android:layout_marginTop="20dp">

        <ImageView
            android:id="@+id/zhizhen"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_centerVertical="true"
            android:background="@drawable/cinema_detail_icon_route_default" />

        <TextView
            android:id="@+id/detalistextthree"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/zhizhen"
            android:text="乘车路线"
            android:textColor="#333333"
            android:textSize="12sp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/ditie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/re3"
        android:layout_marginTop="20dp"
        android:textColor="#333333"
        android:textSize="12sp"
        android:text="地铁：" />

    <TextView
        android:id="@+id/ditiears"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ditie"
        android:layout_marginTop="10dp"
        android:textColor="#333333"
        android:textSize="12sp"
        android:text="13号线西二旗站A口出，换成运通509路或者362路公交车软件园南站下车,过马路对面；" />

    <TextView
        android:id="@+id/gongjiao"
        android:textColor="#333333"
        android:textSize="12sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ditiears"
        android:layout_marginTop="10dp"
        android:text="公交：" />

    <TextView
        android:id="@+id/gongjiaoars"
        android:textColor="#333333"
        android:textSize="12sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/gongjiao"
        android:layout_marginTop="10dp"
        android:text="13号线西二旗站A口出，换成运通509路或者362路公交车软件园南站下车,过马路对面；" />

    <TextView
        android:id="@+id/zijia"
        android:textColor="#333333"
        android:textSize="12sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/gongjiaoars"
        android:layout_marginTop="10dp"
        android:text="自驾：" />

    <TextView
        android:id="@+id/zijiaars"
        android:textColor="#333333"
        android:textSize="12sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/zijia"
        android:layout_marginTop="10dp"
        android:text="13号线西二旗站A口出，换成运通509路或者362路公交车软件园南站下车,过马路对面；" />
</LinearLayout>