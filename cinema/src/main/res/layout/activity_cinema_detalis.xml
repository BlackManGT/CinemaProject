<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.facebook.drawee.view.SimpleDraweeView
            android:background="@drawable/moviebackground"
            android:layout_width="match_parent"
            android:layout_height="186dp" />
        <RelativeLayout
            android:id="@+id/cinemaRelativeLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/cinema_detalis_sdvone"
                android:background="@drawable/rectangle"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="24dp"
                android:layout_width="70dp"
                android:layout_height="70dp"
                app:actualImageScaleType="centerCrop"
                app:roundAsCircle="false"
                app:roundedCornerRadius="3dp"
                app:roundTopLeft="true"
                app:roundTopRight="true"
                app:roundBottomLeft="true"
                app:roundBottomRight="true"></com.facebook.drawee.view.SimpleDraweeView>
            <RelativeLayout
                android:layout_toRightOf="@+id/cinema_detalis_sdvone"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/cinema_detalis_textviewone"
                    android:layout_marginLeft="10dp"
                    android:text="北京"
                    android:textSize="14sp"
                    android:textColor="#ffffff"
                    android:layout_marginTop="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/cinema_detalis_textviewtwo"
                    android:layout_below="@+id/cinema_detalis_textviewone"
                    android:layout_marginLeft="10dp"
                    android:text="北京"
                    android:textSize="12sp"
                    android:textColor="#ffffff"
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </RelativeLayout>

        </RelativeLayout>
        <recycler.coverflow.RecyclerCoverFlow
            android:id="@+id/cinema_detalis_horse"
            android:layout_marginTop="105dp"
            android:layout_width="match_parent"
            android:layout_height="223dp"></recycler.coverflow.RecyclerCoverFlow>

        <RelativeLayout

            android:layout_below="@+id/cinema_detalis_horse"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RadioGroup
                android:id="@+id/home_radio_group2"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:background="@drawable/lineone"
                android:layout_height="2dp">
                <RadioButton
                    android:id="@+id/home_radio_1"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:button="@null"
                    android:checked="true"
                    android:background="@drawable/btn_gradientthree"
                    android:layout_height="match_parent"/>
                <RadioButton
                    android:id="@+id/home_radio_2"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:button="@null"
                    android:background="@drawable/radio_selector"
                    android:layout_height="match_parent"/>
                <RadioButton
                    android:id="@+id/home_radio_3"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:button="@null"
                    android:background="@drawable/radio_selector"
                    android:layout_height="match_parent"/>
                <RadioButton
                    android:id="@+id/home_radio_4"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:button="@null"
                    android:background="@drawable/radio_selector"
                    android:layout_height="match_parent"/>
                <RadioButton
                    android:id="@+id/home_radio_5"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:button="@null"
                    android:background="@drawable/radio_selector"
                    android:layout_height="match_parent"/>
                <RadioButton
                    android:id="@+id/home_radio_6"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:button="@null"
                    android:background="@drawable/radio_selector"
                    android:layout_height="match_parent"/>
            </RadioGroup>

        </RelativeLayout>
    </RelativeLayout>
    <android.support.v7.widget.RecyclerView
        android:layout_marginTop="20dp"
        android:id="@+id/cinema_recy2"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></android.support.v7.widget.RecyclerView>
</LinearLayout>
